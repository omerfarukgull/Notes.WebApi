@model NoteModel
@{
    ViewData["Title"] = "NoteDetails";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="col-md-12 mt-5 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ders Notu Düzenle</h4>
            <p class="card-description">
            </p>
            <form asp-controller="Admin" asp-action="NoteDetails" method="post" enctype="multipart/form-data" class="forms-sample">
                <input name="NoteId" type="hidden" class="form-control" value="@Model.NoteId">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Başlık"
                           required="Gerekli" data-validation-required-message="Lütfen Başlık Giriniz" />
                </div>

                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea type="text" asp-for="Content" class="form-control" placeholder="Açıklama"
                              required="Gerekli" data-validation-required-message="Lütfen Açıklama Giriniz"></textarea>
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="NoteImgUrl" />
                    <img src="~/upload/img/@Model.NoteImgUrl" width="100" />
                    <input type="file" asp-for="NoteImgUrl" name="file" />
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="NotePdfUrl" />
                    <img src="~/upload/img/pdf.png" width="100" />
                    <input type="file" asp-for="NotePdfUrl" name="pdffile" />

                </div>

                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.categories, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <div class="form-check">
                        @if (Model.IsApproved == true)
                        {
                            <label asp-for="IsApproved" class="form-check-label">
                                <input asp-for=IsApproved type="checkbox" checked class="form-check-input">Yayında
                            </label>
                        }
                        else
                        {
                            <label asp-for="IsApproved" class="form-check-label">
                                <input asp-for=IsApproved type="checkbox" class="form-check-input">Yayınla
                            </label>

                        }
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>




