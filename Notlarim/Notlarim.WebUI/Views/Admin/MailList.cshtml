@using MyBlog.Entities.Concrete;
@model IEnumerable<Messages>
@{
    ViewData["Title"] = "MailList";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesajlar</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th> İsim </th>
                                <th> Mail </th>
                                <th> Title </th>
                                <th> Konu </th>
                                <th> Mesaj Durum </th>
                                <th> Mesaj Tarihi </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td> @item.Email </td>
                                    <td> @item.Title </td>
                                    <td> @item.Message </td>
                                    <td>
                                        @if (item.MessageStatus == true)
                                        {
                                            <span class="badge badge-success">Cevaplandı</span>
                                        }
                                        else if (item.MessageStatus == false)
                                        {
                                            <span class="badge badge-danger"> Cevap Bekliyor</span>
                                        }

                                    </td>
                                    <td> @item.CreatDate.ToString("MMM d, yyyyy") </td>
                                    <td> <a asp-controller="Admin" asp-action="MailSend" asp-route-mailId="@item.MessagesId" class="btn btn-outline-success btn-fw">Detay</a> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

