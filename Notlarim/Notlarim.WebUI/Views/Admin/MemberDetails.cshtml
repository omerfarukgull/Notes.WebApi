@model MemberStatuModel
@{
    ViewData["Title"] = "MemberDetails";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row m-5">
    <div class="col-md-4">
        <div class="profile-img">
            <img src="~/upload/img/@Model.MemberImageUrl" width="250" height="250" alt="" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="profile-head">
            <h5>
                @Model.Name @Model.SurName
            </h5>
            <h6>Okul</h6>
            <p>@Model.University</p>
            <h6>Bölüm</h6>
            <p>@Model.Department</p>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-4">
        <div class="profile-work">
        </div>
    </div>
    <div class="col-md-8">
        <div class="tab-content profile-tab">
            <div class="tab-pane fade show active">
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="MemberId" class="font-weight-bold"></label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.MemberId</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Name" class="font-weight-bold"></label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.Name</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="SurName" class="font-weight-bold"></label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.SurName</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Email" class="font-weight-bold"></label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.Email</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="font-weight-bold">Phone</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.PhoneNumber</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Gender" class="font-weight-bold"></label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.Gender</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <form asp-controller="Admin" asp-action="MemberDetails" method="post" enctype="multipart/form-data" class="forms-sample">
                            <input name="MemberId" type="hidden" class="form-control" value="@Model.MemberId">
                            <div class="form-group">
                                <label asp-for="UserStatu"></label>
                                <select asp-for="UserStatu" value="@Model.UserStatu" class="form-control" required>
                                    <option value="User">Kullanıcı</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                            <button class="btn btn-light">İptal</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


