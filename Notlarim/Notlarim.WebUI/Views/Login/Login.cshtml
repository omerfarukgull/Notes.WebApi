@model MemberModel
@{
    ViewData["Title"] = "Notlarım - Giriş";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="brand-logo">
                    <img src="~/upload/img/logo.png" width="500" height="150" />
                </div>
                <h4>Merhaba! başlayalım</h4>
                <h6 class="font-weight-light">Giriş yapın.</h6>
                @if (ViewBag.Error != null)
                {
                    <h5 class="text-danger">@ViewBag.Error</h5>
                }
                <form asp-controller="Login" asp-action="LoginFromRestApi" method="post" class="pt-3">

                    <div class="form-group">
                        <label asp-for="Email">Email address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email"
                               required data-validation-required-message="Lütfen Email Giriniz">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre"
                               required data-validation-required-message="Lütfen Şifre Giriniz">
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-danger">Giriş Yap</button>
                    </div>
                    <div class="my-2 d-flex justify-content-between align-items-center">
                        <a asp-controller="Account" asp-action="ForgotPassword" class="auth-link text-black">Şifremi Unuttum</a>
                    </div>
                    <div class="text-center mt-4">
                        Hesabınız yok mu? <a asp-action="MemberAdd" class="text-primary">Hesap Olustur</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
