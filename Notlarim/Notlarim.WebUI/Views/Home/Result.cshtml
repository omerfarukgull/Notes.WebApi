@model List<SearchNote>
@{
    ViewData["Title"] = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-12">
        <div class="row">
            @if (Model.Count == 0)
            {  <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-warning">
                               Kayıt Bulunamadı
                            </div>
                        </div>
                    </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-3 not-link mt-3 text-center">
                        <a asp-controller="Home" asp-action="NoteDetails" asp-route-noteId="@item.SearchNoteId" class="text-dark mt-3"><img src="~/upload/img/@item.SearchNoteImg" width="210" height="100"> <br>@item.SearchNoteTitle</a>
                    </div>
                }
            }
        </div>
    </div>
</div>